---
import RenderText from "./RenderText.astro";

interface Props {
  title: string;
  iconUrl: string;
  description: any;
  originalPrice: number;
  priceWithDiscount: number;
  color: string;
  bgUrl: string;
}

const {
  description,
  iconUrl,
  originalPrice,
  priceWithDiscount,
  title,
  color,
  bgUrl,
} = Astro.props;
---

<div class="card" style={{ borderColor: color, color }}>
  <img class="bg" src={bgUrl} />
  <div class="info">
    <h4>{title}</h4>
    <img src={iconUrl} alt={title} />
    <RenderText color={color} text={description} />

    <button style={{ borderColor: color, backgroundColor: color }}>
      <span>Buy</span>

      <div class="price">
        Price ${priceWithDiscount}
      </div>
    </button>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1rem;
    border: 3px solid;
    border-radius: 32px;
    text-transform: uppercase;
    font-family: "Good times";
    gap: 1rem;
    text-align: center;
    position: relative;
    width: 450px;

    .bg {
      border-radius: 30px;
      position: absolute;
      height: 100%;
      width: 100%;
      object-fit: cover;
      top: 0;
      z-index: 1;
      filter: brightness(0.3);
    }

    .info {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
      justify-content: center;
      z-index: 15;
      h4 {
        font-family: "Retro gaming";
        font-size: 26px;
      }

      img {
        width: 100px;
        height: 100px;
        object-fit: contain;
      }

      /* .price {
        font-size: 38px;
        display: flex;
        flex-direction: column;

        .original {
          font-size: 16px;
          text-decoration: line-through;
        }
      } */

      button {
        width: 100%;
        border-radius: 32px;
        padding: 0.75rem;
        cursor: pointer;
        text-transform: uppercase;
        font-family: "Retro gaming";
        border: none;
        border: 3px solid;
        font-size: 24px;
        color: white;
        transition-duration: 0.3s;
        display: flex;
        align-items: center;
        justify-content: space-between;

        .price {
          display: flex;
          gap: 0.3rem;
          background-color: white;
          color: black;
          padding: 0.3rem 0.5rem;
          border-radius: 16px;
        }

        &:hover {
          transform: scale(1.03);
        }
      }
    }
  }
</style>

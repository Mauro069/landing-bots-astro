---
import { robots } from "../utils/texts";
import RobotCard from "./RobotCard.astro";
---

<section id="robots" class="my-robots">
  <h3>My Robots</h3>

  <div class="cards">
    <RobotCard
      bgUrl={robots[1].bgUrl}
      title={robots[1].title}
      description={robots[1].description}
      iconUrl={robots[1].iconUrl}
      color={robots[1].color}
      priceWithDiscount={robots[1].priceWithDiscount}
    />

    <RobotCard
      bgUrl={robots[2].bgUrl}
      title={robots[2].title}
      description={robots[2].description}
      iconUrl={robots[2].iconUrl}
      color={robots[2].color}
      priceWithDiscount={robots[2].priceWithDiscount}
    />

    <RobotCard
      bgUrl={robots[3].bgUrl}
      title={robots[3].title}
      description={robots[3].description}
      iconUrl={robots[3].iconUrl}
      color={robots[3].color}
      priceWithDiscount={robots[3].priceWithDiscount}
    />
  </div>
</section>

<style>
  .my-robots {
    padding: 4rem;
    padding-top: 6rem;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    h3 {
      font-family: "Good times";
      font-size: 32px;
    }

    .cards {
      margin: 2rem 0;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      gap: 3rem;
    }
  }

  @media (min-width: 600px) {
    .my-robots {
      .cards {
        flex-direction: row;
      }
    }
  }
</style>

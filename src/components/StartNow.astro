---
import { Buttonlist } from "./ButtonList/index.tsx";
---

<section class="start-now">
  <h3>Start Now</h3>

  <div class="buttons-lists">
    <Buttonlist
      client:visible
      title="Type account"
      options={["Challenge", "Real"]}
    />

    <Buttonlist
      client:visible
      title="Capital"
      options={["10,000", "25,000", "50,000", "100,000", "200,000", "300,000"]}
    />

    <Buttonlist
      client:visible
      title="Platform"
      options={["Metatrader 4", "Metatrader 5"]}
    />

    <div class="price">
      <h5>Price:</h5>
      <p>$100</p>

      <button> Buy now</button>
    </div>
  </div>

  <style>
    .start-now {
      padding: 2rem 4rem;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-family: "N27";
      text-align: center;
      gap: 1rem;

      h3 {
        color: var(--color-3);
        font-family: "Retro gaming";
        text-transform: uppercase;
        font-size: 32px;
        padding-bottom: 1rem;
      }

      .buttons-lists {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
      }

      .price {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        h5 {
          font-size: 16px;
        }

        p {
          font-size: 42px;
          font-family: "Retro gaming";
          color: var(--color-3);
        }

        button {
          font-size: 16px;
          padding: 1rem 2rem;
          border-radius: 32px;
          border: none;
          cursor: pointer;
          font-weight: bold;
          background-color: var(--color-2);
          transition-duration: 0.3s;

          &:hover {
            transform: scale(1.04);
          }
        }
      }
    }
  </style>
</section>

          white-space: nowrap;

          b {
            color: var(--color-3);
          }
        }
      }

      .links {
        display: flex;

        .link {
          display: flex;
          align-items: center;
          text-decoration: none;
          color: inherit;
          color: white;
          padding: 0.5rem 1.5rem;
          border-right: 1px solid var(--color-3);
          transition-duration: 0.3s;

          &:last-child {
            border-right: none;
          }

          &:hover {
            background-color: var(--color-3);
            color: black;
          }
        }
      }
    }
  }
</style>

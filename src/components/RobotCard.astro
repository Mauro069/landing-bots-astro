---
import RenderText from "./RenderText.astro";

interface Props {
  title: string;
  iconUrl: string;
  description: string;
  price: number;
  color: string;
}

const { description, iconUrl, price, title, color } = Astro.props;
---

<div class="card" style={{ borderColor: color, color }}>
  <h4>{title}</h4>
  <img src={iconUrl} alt={title} />
  <RenderText text={description} />
  <div class="price">
    <p>Price</p>
    <b>${price}</b>
  </div>

  <button style={{ borderColor: color, backgroundColor: color }}> Buy</button>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1rem;
    border: 3px solid;
    border-radius: 32px;
    text-transform: uppercase;
    font-family: "Good times";
    gap: 1rem;
    text-align: center;

    h4 {
      font-family: "Retro gaming";
      font-size: 26px;
    }

    img {
      width: 100px;
      height: 100px;
      object-fit: contain;
    }

    .price {
      font-size: 38px;
    }

    button {
      width: 100%;
      border-radius: 32px;
      padding: 0.75rem 0;
      cursor: pointer;
      text-transform: uppercase;
      font-family: "Retro gaming";
      border: none;
      border: 3px solid;
      font-size: 24px;
      color: white;
      transition-duration: .3s;

      &:hover {
        transform: scale(1.03);
      }
    }
  }
</style>

---
interface Props {
  title: string;
  description: string;
  color: "red" | "yellow" | "blue" | "green";
  img: string;
}

const { title, description, color, img } = Astro.props;

const colors = {
  red: "#ff3632",
  yellow: "#fff001",
  blue: "#00eaff",
  green: "#24d201",
};
---

<div class="card" style={{ borderColor: colors[color] }}>
  <img src={img} alt={title} />
  <h3 style={{ color: colors[color] }}>{title}</h3>
  <span>{description}</span>
</div>

<style>
  .card {
    height: 350px;
    width: 275px;
    border-radius: 16px;
    border: 3px solid;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    gap: 1rem;
    color: white;
    text-align: center;
    font-family: "N27";

    img {
      width: 50px;
      height: 50px;
      object-fit: contain;
      flex: 1/2;
    }

    span {
      font-size: 14px;
      flex: 1/2;
    }
  }
</style>

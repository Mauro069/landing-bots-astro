      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 4rem;

    .welcome {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      gap: 1.5rem;

      .title {
        color: white;
        text-transform: uppercase;
        font-family: "Good times";
        font-size: 48px;
      }

      .description {
        text-shadow: 2px 2px 20px var(--color-3);
        color: var(--color-3);
        font-family: "Retro gaming";
      }
    }

    .info {
      margin-top: 4rem;
      align-self: center;
	  display: flex;
	  align-items: center;
	  gap: 4rem;

	  .cards {
		height: 100%;
		display: flex;
		flex-direction: column;
		gap: 2rem;

		.card {
			height: 350px;
			width: 275px;
			border-radius: 16px;
			border: 3px solid white;
		}
	  }
    }
  }
</style>
